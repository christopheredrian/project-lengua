<div class="row">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active">Users</li>
    </ol>
</div>

<div class="row">
    <div class="col-10"></div>
    <a href="/users/register" class="btn btn-success col-2 mb-2">Register New User</a>
    
</div>
<div class="row">

    <table class="table">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Date Created</th>
            <th>Action</th>
        </tr>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{ this.name }}</td>
                <td>{{ this.email }}</td>
                <td>{{ this.role }}</td>
                <td>{{ this.date }}</td>
                <td>
                    <a class="btn btn-warning" href="/users/edit/{{ this.id }}">Edit</a>
                    <form action="/users/delete" method="post" class="d-inline" onclick="return confirm('Are you sure you want to delete this user? This cannot be undone')">
                        <input type="hidden" name="_id" value="{{ this.id }}">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>